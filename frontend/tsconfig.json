{
  "compilerOptions": {
    "jsx": "react-jsx",                   
    "lib": ["DOM", "ESNext"],             
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true                  
  },
  "include": ["src", "vite-env.d.ts"],     
  "exclude": ["node_modules"]
}
